@startuml

!include Style.puml

-> ": DeleteHabitCommand": runCommand(\ngoalList: GoalList,\n printManager: PrintManager,\n storage: Storage)
activate ": DeleteHabitCommand"

": DeleteHabitCommand" -> "goalList: GoalList": deleteHabitFromGoal(\ngoalIndex: int,\n habitIndex: int,\n printManager: PrintManager)
activate "goalList: GoalList"

create "goal: Goal"
"goalList: GoalList" -> "goal: Goal": getGoal(goalIndex: int)
activate "goal: Goal"
"goalList: GoalList" <-- "goal: Goal"

create "habitList: ArrayList<habit>"
"goalList: GoalList" -> "habitList: ArrayList<habit>"
activate "habitList: ArrayList<habit>"
"goal: Goal" <- "habitList: ArrayList<habit>": getHabitList()
"goal: Goal" --> "habitList: ArrayList<habit>"
"goalList: GoalList" <-- "habitList: ArrayList<habit>"

create "habit: Habit"
"goalList: GoalList" -> "habit: Habit"
activate "habit: Habit"
"habitList: ArrayList<habit>" <- "habit: Habit": getHabit(\nhabitList: ArrayList<Habit>,\n habitIndex: int)
"habitList: ArrayList<habit>" --> "habit: Habit": habit
"goalList: GoalList" <-- "habit: Habit"


"goalList: GoalList" -> "goal: Goal": removeHabit(habitIndex: int)
"goal: Goal" -> "goal: Goal": remove(habitIndex: int)
activate "goal: Goal"
"goal: Goal" --> "goal: Goal"
deactivate "goal: Goal"
"goalList: GoalList" <-- "goal: Goal"


"goalList: GoalList" -> "goal: Goal": printRemovedHabit(\ngoal.getDescription(): String,\n habit.getHabitName(): String)
"goal: Goal" -> "habit: Habit"
"habit: Habit" -> ": PrintManager"
activate ": PrintManager"

return

return

@enduml